#include <stdio.h>

#define MAX_SIZE 9 // Maximum size of the array

int main() {
    int arr[MAX_SIZE] = {1, 2, 3, 4, 5, 6, 7, 8, 9}; // Array with 9 elements
    int size = MAX_SIZE;
    int index_to_remove = 4; // Index of the element to remove (0-based index)

    // Display original array
    printf("Original Array:\n");
    for (int i = 0; i < size; i++) {
        printf("%d ", arr[i]);
    }
    printf("\n");

    // Remove element at index_to_remove
    if (index_to_remove >= 0 && index_to_remove < size) {
        for (int i = index_to_remove; i < size - 1; i++) {
            arr[i] = arr[i + 1];
        }
        size--; // Decrease the size of the array
        printf("Array after removing element at index %d:\n", index_to_remove);
        for (int i = 0; i < size; i++) {
            printf("%d ", arr[i]);
        }
        printf("\n");
    } else {
        printf("Invalid index to remove.\n");
    }

    return 0;
}





