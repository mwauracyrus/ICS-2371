#include <stdio.h>

int main() {
    int arr[9] = {1, 2, 3, 4, 5, 6, 7, 8, 9};
    int size = 9;

    printf("Original Array:\n");
    for (int i = 0; i < size; i++) {
        printf("%d ", arr[i]);
    }
    printf("\n");

    // Omit any one number in the middle
    int omit_position;
    printf("Enter the position of the number to omit (1 to 9): ");
    scanf("%d", &omit_position);
    
    if (omit_position >= 1 && omit_position <= size) {
        int omit = arr[omit_position - 1];

        // Print array after omitting the specified number
        printf("Array after omitting %d:\n", omit);
        for (int i = 0; i < size; i++) {
            if (i != omit_position - 1) {
                printf("%d ", arr[i]);
            }
        }
        printf("\n");

        // Delete the omitted number from the array
        for (int i = omit_position - 1; i < size - 1; i++) {
            arr[i] = arr[i + 1];
        }
        size--;

        // Print the updated array after deletion
        printf("Array after deleting %d:\n", omit);
        for (int i = 0; i < size; i++) {
            printf("%d ", arr[i]);
        }
        printf("\n");
    } else {
        printf("Invalid position. Please enter a position between 1 and 9.\n");
    }

    return 0;
}
